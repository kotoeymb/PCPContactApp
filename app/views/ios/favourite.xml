<Alloy>
	<Collection src="todo"/>
	
		<Window id="favWin" title="Favourites" class="container" modal="true">
			<View>
				<TableView id="todoTable" dataCollection="todo" dataFilter="whereFunction">
					<TableViewRow  id="row">
						<ImageView id="fav" user_id="{user_id}" done="{done}" onClick="toggleFav" />
						<Label id="task" text = "{item}" ph ="{date_completed}" user_id="{user_id}" email="{done}"/>
					</TableViewRow>
				</TableView>
			</View>
		</Window>
	
</Alloy>