<Alloy>
	<Window id="detailWin" title="Add Item" class="container" modal="true">
		<View >
			<ImageView id="contactpic"></ImageView>
			<Label id="name">Name</Label>
			<Label id="phone">Phone</Label>
			<Label id="email">email</Label>
			<TextField  id="titlelabel" hintText="Name" class="bowl">Name</TextField>
			<TextField  id="phonelabel" hintText="Ph number" class="bowl">Phone_Number</TextField>
			<TextField  id="emaillabel" hintText="Email" class="bowl">Email</TextField>
			
			<Button class="updateButton" onClick="addItem" top=450 right=10>Update</Button> 
			<Button class="cancleButton" onClick="closeWindow" top=450 left=10>Cancel</Button>

		</View>
	</Window>
</Alloy>