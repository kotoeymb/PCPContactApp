<Alloy>
	<TableViewRow id="row">
		<ImageView id="fav" onClick="toggleFav" user_id="{user_id}" done="{done}" />
		<Label id="task" text="{item}" phone="{phone}" user_id="{user_id}" email="{email}" ppic="{ppic}" done="{done}" />
		<Label id="subtask" text="{phone}"/>
		<Button id="databtn" user_id="{user_id}" onLongpress="deleteRecord">Delete</Button>
	</TableViewRow>
</Alloy>