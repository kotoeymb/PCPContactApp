<Alloy>
	<Window id="addWin" title="Add Contact" class="container" modal="true" >
		<View layout="vertical">
			<ImageView id="contactpic"></ImageView>
			<TextField id="itemField" hintText="Name" class="bowl"></TextField>
			<TextField id="doneField" hintText="Phone" class="bowl"></TextField>
			<TextField id="emailField" hintText="Email" class="bowl"></TextField>
			<Button class="addButton" onClick="addItem">Add Item</Button>
		</View>
	</Window>
</Alloy>
