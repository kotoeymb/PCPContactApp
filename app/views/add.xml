<Alloy>
	<Window id="addWin" title="Add Item" class="container" modal="true">
		<View layout="vertical">
			<ImageView id="contactpic"></ImageView>
			<TextField id="itemField" hintText="Name" class="bowl"></TextField>
			<TextField id="doneField" hintText="Ph number" class="bowl"></TextField>
			<TextField id="emailField" hintText="email" class="bowl"></TextField>
			
			<Button class="addButton" onClick="addItem"  top=100>Add Item</Button>
			<Button class="cancleButton" onClick="closeWindow">Cancel</Button>

		</View>
	</Window>
</Alloy>